<div class="position-relative">
    <div class="row">
        <div class="col-12">
            <h3>{{#str}}test_info, mod_kuet{{/str}}</h3>
            <table data-region="test-result" class="generaltable">
                <thead>
                    <tr>
                        <th class="header c0">{{#str}}tests, mod_kuet{{/str}}</th>
                        <th class="header c1">{{#str}}test_description, mod_kuet{{/str}}</th>
                        <th class="header c2">{{#str}}results, mod_kuet{{/str}}</th>
                        <th class="header c3">{{#str}}extra_info, mod_kuet{{/str}}</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="cell c0">{{#str}}protocoltest, mod_kuet{{/str}}</td>
                        <td class="cell c1">{{#str}}protocoltest_description, mod_kuet{{/str}}</td>
                        <td id="protocol-test-result" class="cell c2">{{#pix}} s/pending, mod_kuet {{/pix}}</td>
                        <td id="protocol-test-extra-info" class="cell c3"><span>-<span></td>
                    </tr>
                    <tr>
                        <td class="cell c0">{{#str}}ssltest, mod_kuet{{/str}}</td>
                        <td class="cell c1">{{#str}}ssltest_description, mod_kuet{{/str}}</td>
                        <td id="ssl-test-result" class="cell c2">{{#pix}} s/pending, mod_kuet {{/pix}}</td>
                        <td id="ssl-test-extra-info" class="cell c3"><span>-<span></td>
                    </tr>
                    <tr>
                        <td class="cell c0">{{#str}}openconnectiontest, mod_kuet{{/str}}</td>
                        <td class="cell c1">{{#str}}openconnectiontest_description, mod_kuet{{/str}}</td>
                        <td id="open-connection-test-result" class="cell c2">{{#pix}} s/pending, mod_kuet {{/pix}}</td>
                        <td id="open-connection-test-extra-info" class="cell c3"><span>-<span></td>
                    </tr>
                    <tr>
                        <td class="cell c0">{{#str}}sendmessagetest, mod_kuet{{/str}}</td>
                        <td class="cell c1">{{#str}}sendmessagetest_description, mod_kuet{{/str}}</td>
                        <td id="send-message-test-result" class="cell c2">{{#pix}} s/pending, mod_kuet {{/pix}}</td>
                        <td id="send-message-test-extra-info" class="cell c3"><span>-<span></td>
                    </tr>
                    <tr>
                        <td class="cell c0">{{#str}}receivemessagetest, mod_kuet{{/str}}</td>
                        <td class="cell c1">{{#str}}receivemessagetest_description, mod_kuet{{/str}}</td>
                        <td id="receive-message-test-result" class="cell c2">{{#pix}} s/pending, mod_kuet {{/pix}}</td>
                        <td id="receive-message-test-extra-info" class="cell c3"><span>-<span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{{#js}}
    require(['mod_kuet/testssl'], function(TestSockets) {
        TestSockets.initTestSockets('[data-region="test-result"]', "{{socketurl}}", "{{port}}");
    });
{{/js}}
