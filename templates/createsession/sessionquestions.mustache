<div class="questions-list-body d-table">
    <div class="d-table-row questions-list-thead">
        <div class="d-table-cell"></div>
        <div class="d-table-cell">{{#str}}question_position, mod_jqshow{{/str}}</div>
        <div class="d-table-cell">{{#str}}question_name, mod_jqshow{{/str}}</div>
        <div class="d-table-cell">{{#str}}question_type, mod_jqshow{{/str}}</div>
        <div class="d-table-cell">{{#str}}question_isvalid, mod_jqshow{{/str}}</div>
        <div class="d-table-cell">{{#str}}question_actions, mod_jqshow{{/str}}</div>
    </div>
    {{#sessionquestions}}
        <div class="d-table-row questions-list-data">
            <div class="d-table-cell"></div>
            <div class="d-table-cell">{{position}}</div>
            <div class="d-table-cell">{{name}}</div>
            <div class="d-table-cell">{{type}}</div>
            <div class="d-table-cell">{{^isvalid}}invalid-question{{/isvalid}}</div>
            <div class="d-table-cell actions">
                {{#managesessions}}
                    <div class="content-actions">
                        <div class="question-action">
                            <a href="{{editquestionurl}}">
                                {{#pix}} i/edit_session, mod_jqshow {{/pix}}
                            </a>
                        </div>
                        <div class="question-action" data-action="copy_question" data-questionnid="{{questionnid}}">
                            {{#pix}} i/copy_session, mod_jqshow {{/pix}}
                        </div>
                        <div class="question-action" data-action="delete_question" data-questionnid="{{questionnid}}">
                            {{#pix}} i/delete_session, mod_jqshow {{/pix}}
                        </div>
                    </div>
                {{/managesessions}}
            </div>
        </div>
    {{/sessionquestions}}
</div>
{{#js}}
    require(['mod_jqshow/sessionquestions'],
        function(SessionQuestions) {
            SessionQuestions.initSessionQuestions('[data-region="questions-panel"]');
        }
    );
{{/js}}
