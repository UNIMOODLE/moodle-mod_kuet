<div class="content-header">
    <div class="content-title">
        <h2>{{#str}}questionsconfiguration, mod_jqshow{{/str}}</h2>
        <small>{{#str}}questionsconfiguration_info, mod_jqshow{{/str}}</small>
    </div>
    <div class="session-steps">
        <div class="step step1">
            <div class="timeline timeline-r"></div>
            <span class="step-text"></span>
        </div>
        <div class="step step2 current">
            <div class="timeline timeline-r"></div>
            <div class="timeline timeline-l"></div>
            <span class="step-text bg-primary">2</span>
        </div>
        <div class="step step3">
            <div class="timeline timeline-l"></div>
            <span class="step-text"></span>
        </div>
    </div>
</div>
<div class="row questions-configuration">
    <div class="col-12 col-lg-7 container">
        <div class="questions-list">
            <h5 class="titlecontainer bg-primary">
                {{#pix}} i/questions_list, mod_jqshow {{/pix}}
                {{#str}}questions_list, mod_jqshow{{/str}}
            </h5>
            <div class="questions-list-body d-table">
                <div class="d-table-row questions-list-thead">
                    <div class="d-table-cell"></div>
                    <div class="d-table-cell">{{#str}}question_position, mod_jqshow{{/str}}</div>
                    <div class="d-table-cell">{{#str}}question_name, mod_jqshow{{/str}}</div>
                    <div class="d-table-cell">{{#str}}question_type, mod_jqshow{{/str}}</div>
                    <div class="d-table-cell">{{#str}}question_date, mod_jqshow{{/str}}</div>
                    <div class="d-table-cell">{{#str}}question_actions, mod_jqshow{{/str}}</div>
                </div>
                {{#questionsselected}}
                    <div class="d-table-row questions-list-data">
                        <div class="d-table-cell"></div>
                        <div class="d-table-cell">{{position}}</div>
                        <div class="d-table-cell">{{name}}</div>
                        <div class="d-table-cell">{{type}}</div>
                        <div class="d-table-cell">{{date}}</div>
                        <div class="d-table-cell actions">
                            {{#managesessions}}
                                <div class="content-actions">
                                    <div class="question-action">
                                        <a href="{{editquestionurl}}">
                                            {{#pix}} i/edit_session, mod_jqshow {{/pix}}
                                        </a>
                                    </div>
                                    <div class="question-action" data-action="copy_question" data-questionnid="{{questionnid}}">
                                        {{#pix}} i/copy_session, mod_jqshow {{/pix}}
                                    </div>
                                    <div class="question-action" data-action="delete_question" data-questionnid="{{questionnid}}">
                                        {{#pix}} i/delete_session, mod_jqshow {{/pix}}
                                    </div>
                                </div>
                            {{/managesessions}}
                        </div>
                    </div>
                {{/questionsselected}}
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-5 container">
        <div class="questions-bank">
            <h5 class="titlecontainer bg-primary">
                {{#pix}} i/questions_list, mod_jqshow {{/pix}}
                {{#str}}questions_bank, mod_jqshow{{/str}}
            </h5>
            <div class="form-group">
                <label for="exampleFormControlSelect1">{{#str}}select_category, mod_jqshow{{/str}}</label>
                {{{questionbank_categories}}}
                <a class="btn btn-primary" href="{{questionbank_url}}" target="_blank">
                    {{#str}}go_questionbank, mod_jqshow{{/str}}
                </a>
            </div>
            <hr>
            <div class="content-question" data-region="content-question">
                {{> mod_jqshow/createsession/contentquestions }}
            </div>
            <hr>
            <button class="btn btn-primary" data-action="add_questions">
                {{#str}}add_questions, mod_jqshow{{/str}}
            </button>
            <small>
                {{#str}}number_select, mod_jqshow{{/str}} <span id="number_select">0</span>
            </small>
        </div>
    </div>
</div>
{{#js}}
    require(['mod_jqshow/questionspanel'],
        function(QuestionsPanel) {
            QuestionsPanel.initQuestionsPanel('[data-region="questions-panel"]');
        }
    );
{{/js}}
