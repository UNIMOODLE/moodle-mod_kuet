{{#manualmode}}
    {{> mod_jqshow/session/manual/teachercanvas }}
{{/manualmode}}
{{#programmedmode}}
    <div class="teacher-session-content" data-region="teacher-session-content">
        <div class="row summary-session">
            <div class="col-12">
                <div class="d-flex align-items-center float-right mb-2">
                    {{#hasqrcodeimage}}
                        <div class="imageQr mr-3">
                            <div class="item">
                                <a href="#imageQr">
                                    <img src="{{{urlqrcode}}}" />
                                </a>
                            </div>
                        </div>
                        <div class="lightboxes">
                            <div class="lightbox" id="imageQr">
                                <a href="#" class="close">&times;</a>
                                <div class="content">
                                    <img src="{{{urlqrcode}}}" />
                                </div>
                            </div>
                        </div>
                    {{/hasqrcodeimage}}
                    <button class="btn btn-primary mb-0" data-action="end_session" data-sessionid="{{sid}}">{{#str}}end_session, mod_jqshow{{/str}}</button>
                </div>
            </div>
            {{#racemode}}
                <div class="col-12 container mb-4">
                    <div class="race-results" data-region="race-results" data-sid="{{sid}}" data-cmid="{{cmid}}" data-courseid="{{courseid}}" data-groupmode="{{groupmode}}">
                        {{> mod_jqshow/session/raceresults }}
                    </div>
                </div>
            {{/racemode}}
            <div class="col-12 col-lg-4 container">
                <div class="resume-config">
                    <h6 class="titlecontainer bg-primary">
                        {{#pix}} i/settings, mod_jqshow {{/pix}}
                        {{#str}}session_info, mod_jqshow{{/str}}
                    </h6>
                    {{> mod_jqshow/session/sessionresume }}
                </div>
            </div>
            <div class="col-12 col-lg-8 container">
                <div class="users-results">
                    <h6 class="titlecontainer bg-primary">
                        {{#pix}} i/questions_list, mod_jqshow {{/pix}}
                        {{#str}}results, mod_jqshow{{/str}}
                    </h6>
                    <div class="list-results" data-region="list-results" data-sid="{{sid}}" data-cmid="{{cmid}}" data-courseid="{{courseid}}" {{#groupmode}}data-groupmode="1"{{/groupmode}}>
                        {{> mod_jqshow/session/listresults }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/programmedmode}}

{{#programmedmode}}
    {{#js}}
        require(['mod_jqshow/teacher_programmedmode'], function(ProgrammedMode) {
        ProgrammedMode.initProgrammedMode('[data-region="list-results"]'{{#racemode}}, true{{/racemode}});
        });
    {{/js}}
{{/programmedmode}}
